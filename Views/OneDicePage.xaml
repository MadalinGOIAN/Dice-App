<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_App.Views.OneDicePage"
             Title="OneDicePage">

    <VerticalStackLayout Spacing="150"
                         VerticalOptions="Start">

        <ImageButton Padding="0,80,20,0"
                     Source="return_button.png"
                     Clicked="ImageButtonReturn_Clicked"
                     HorizontalOptions="End"/>

        <Image x:Name="imgDice"
               Source="dice_face_1.png"/>

        <Button Text="Roll"
                FontSize="32"
                BackgroundColor="#512BD4"
                Margin="25"
                Clicked="ButtonRoll_Clicked"/>
    </VerticalStackLayout>
</ContentPage>