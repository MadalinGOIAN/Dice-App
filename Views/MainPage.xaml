<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_App.Views.MainPage">

    <VerticalStackLayout Padding="75"
                         Spacing="48"
                         VerticalOptions="Center">

        <Button x:Name="btn1Dice"
                Text="1 Dice"
                FontSize="32"
                BackgroundColor="#512BD4"
                HeightRequest="85"
                Clicked="Btn1Dice_Clicked"/>

        <Button x:Name="btn2Dices"
                Text="2 Dices"
                FontSize="32"
                BackgroundColor="#512BD4"
                HeightRequest="85"
                Clicked="Btn2Dices_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
