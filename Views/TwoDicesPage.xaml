<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dice_App.Views.TwoDicesPage"
             Title="TwoDicesPage">

    <VerticalStackLayout Spacing="70"
                         VerticalOptions="Start">

        <ImageButton Source="return_button.png"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                     Margin="0,80,36,0"
                     Clicked="ImageButtonReturn_Clicked"/>

        <Image x:Name="imgDice1"
               Source="dice_face_1.png"
               HeightRequest="120"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

        <Image x:Name="imgDice2"
               Source="dice_face_1.png"
               HeightRequest="120"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0"/>

        <Button Text="Roll"
                FontSize="32"
                BackgroundColor="#512BD4"
                VerticalOptions="Start"
                Margin="25,0"
                Clicked="ButtonRoll_Clicked"/>
    </VerticalStackLayout>
</ContentPage>